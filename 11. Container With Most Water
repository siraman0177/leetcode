class Solution {
public:
    int maxArea(vector<int>& height) {
        int max_water=0;
        int lp=0 ,rp=height.size()-1;
        while(lp<rp){
           int width=rp-lp;
            int ht=min(height[lp],height[rp]);
            int curr_water= ht*width;

            max_water=max(curr_water,max_water);
            height[lp] < height[rp] ?lp++ :rp--;
        }
        return max_water;
    }
};
